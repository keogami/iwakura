    "tslib": "^2.8.1",
    "typescript": "^5.8.3",
    "wxt": "^0.20.6"
  },
  "dependencies": {
    "@lucide/svelte": "^0.539.0",
    "@tailwindcss/vite": "^4.1.12",
    "@wxt-dev/storage": "^1.1.1",
    "clsx": "^2.1.1",
    "tailwind-merge": "^3.3.1",
    "tailwind-variants": "^2.1.0",
    "tailwindcss": "^4.1.12",
    "tw-animate-css": "^1.3.6"
  }
